  <% unless current_user.following?(my_followed_id) %>
    <%= form_for(current_user.follower_relations.build(followed_id: my_followed_id), remote: true) do |f| %>
      <%= f.hidden_field :followed_id %>
      <%= f.submit "フォロー", class: "btn btn-large btn-primary" %>
    <% end %>
  <% else %>
    <%= link_to "フォローをやめる", relation_path(current_user.follower_relations.find_by(followed_id: my_followed_id).id), method: :delete, remote: true, class: "btn btn-large btn-primary" %>
  <% end %>